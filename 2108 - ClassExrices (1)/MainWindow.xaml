<Window x:Class="_2108___ClassExrices__1_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2108___ClassExrices__1_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Slider x:Name="mySlider" Minimum="20" Maximum="120" HorizontalAlignment="Center" Margin="50 20 50 50" VerticalAlignment="Top" Height="24" Width="600"/>
        <TextBox x:Name="MyTxtBx" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="150" Width="450" TextWrapping="Wrap" Text="Hello"
                 FontSize="{Binding ElementName=mySlider, Path=Value}"/>
        <TextBlock x:Name="MyTxtBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Width="150" Height="30" TextAlignment="Center" Text="{Binding ElementName=MyTxtBx, Path=Text}" Margin="30"/>


    </StackPanel>
</Window>
